<div state:visible={{@topicInformationVisible}}>
  <div>
    {{#if @topic}}
      <h2 class="title">
        Information on topic:
        <br>
        "{{@topic.label}}"
      </h2>
      Total mentions: {{@topic.volume}}
      <ul class="statistics">
        <li>
          Positive mentions:
          <span class="sentiment-positive">{{@topic.sentiment.positive}}</span>
        </li>
        <li>
          Neutral mentions:
          <span class="sentiment-neutral">{{@topic.sentiment.neutral}}</span>
        </li>
        <li>
          Negative mentions:
          <span class="sentiment-negative">{{@topic.sentiment.negative}}</span>
        </li>
      </ul>
    {{/if}}
  </div>
</div>